<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/darkgreen"
    android:padding="12dp">

    <ImageView
        android:id="@+id/ad_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ad_image"
        android:text="textviewTitle"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ad_shortDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_title"
        android:layout_toRightOf="@id/ad_image"
        android:text="textviewShortDesc"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ad_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_shortDesc"
        android:layout_toRightOf="@id/ad_image"
        android:text="textviewLocation"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <!--<TextView-->
        <!--android:id="@+id/ad_longDesc"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:layout_below="@id/ad_location"-->
        <!--android:layout_marginTop="12dp"-->
        <!--android:layout_marginBottom="12dp"-->
        <!--android:text="textviewLongDesc"-->
        <!--android:textColor="@color/white"-->
        <!--android:textSize="16sp" />-->

    <TextView
        android:id="@+id/ad_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_location"
        android:text="textviewPhoneNum"
        android:layout_toRightOf="@id/ad_image"
        android:textColor="@color/white"
        android:textSize="12sp" />

    <Button
        android:id="@+id/reportBtn"
        android:layout_width="121dp"
        android:layout_height="38dp"
        android:layout_below="@+id/ad_phoneNum"
        android:layout_alignEnd="@+id/ad_title"
        android:layout_marginStart="31dp"
        android:layout_marginLeft="31dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@+id/ad_image"
        android:layout_toRightOf="@+id/ad_image"
        android:text="JelentÃ©s" />


</RelativeLayout>