    <Button
        android:id="@+id/reportBtn"
        android:textColor="@color/darkergreen"
        android:layout_width="80dp"
        android:layout_height="38dp"
        android:layout_below="@+id/ad_shortDesc"
        android:layout_marginTop="8dp"
        android:background="@color/lighterlighterdarkgreen"
        android:text="@string/jelent_s"
        android:layout_alignRight="@+id/ad_title" />

    <TextView
        android:id="@+id/usersAd"
        android:layout_width="144dp"
        android:layout_height="22dp"
        android:layout_below="@+id/ad_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
