<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/darkgreen"
    android:padding="12dp"
    android:id="@+id/itemListed">

    <ImageView
        android:id="@+id/ad_image"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginRight="20dp"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/ad_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@id/ad_image"
        android:text="textviewTitle"
        android:textColor="@color/white"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/ad_shortDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ad_title"
        android:layout_toRightOf="@id/ad_image"
        android:text="textviewShortDesc"
        android:textColor="@color/white"
        android:textSize="16sp" />


    <TextView
        android:id="@+id/usersAd"
        android:layout_width="144dp"
        android:layout_height="22dp"
        android:layout_below="@+id/ad_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="7dp"
        android:layout_marginRight="7dp"
        android:textColor="@color/darkgreen"
        android:text="Ez az ön hírdetése"
        android:visibility="invisible"
        android:textSize="16sp" />



</RelativeLayout>