<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/darkgreen"
    android:padding="12dp">


    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/detail_image"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="51dp"
        android:layout_marginLeft="51dp"
        android:text="TextView" />

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="75dp"
        android:layout_marginRight="75dp"
        app:srcCompat="@drawable/common_full_open_on_phone" />

    <TextView
        android:id="@+id/detail_shortDesc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_title"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:text="TextView" />

    <TextView
        android:id="@+id/detail_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_shortDesc"
        android:layout_alignParentStart="true"
        android:text="Megtekintési szám"
        android:layout_alignParentLeft="true" />


    <TextView
        android:id="@+id/visitors_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_text"
        android:layout_alignParentStart="true"
        android:text="Number"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/detail_phoneNum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/visitors_number"
        android:layout_alignParentStart="true"
        android:text="phoneNumber"
        android:layout_alignParentLeft="true" />

    <TextView
        android:id="@+id/detail_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_phoneNum"
        android:layout_alignParentStart="true"
        android:text="location"
        android:layout_alignParentLeft="true" />
    <TextView
        android:id="@+id/detail_LongDesc"
        android:layout_width="247dp"
        android:layout_height="34dp"
        android:layout_below="@+id/detail_location"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="17dp"
        android:layout_marginRight="17dp"
        android:text="LongDesc"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="20dp" />

    <ImageButton
        android:id="@+id/shareBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_LongDesc"
        app:srcCompat="@android:drawable/ic_menu_share" />

    <ImageButton
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shareBtn"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="209dp"
        android:layout_marginLeft="209dp"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/ic_delete" />

    <ImageButton
        android:id="@+id/hideBtn"
        android:layout_width="97dp"
        android:layout_height="48dp"
        android:layout_below="@+id/shareBtn"
        android:layout_marginStart="-216dp"
        android:layout_marginLeft="-216dp"
        android:layout_marginBottom="127dp"
        android:layout_toRightOf="@+id/deleteBtn"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/button_onoff_indicator_off" />

    <ImageButton
        android:id="@+id/appearBtn"
        android:layout_width="88dp"
        android:layout_height="40dp"
        android:layout_below="@+id/detail_LongDesc"
        android:layout_marginStart="-216dp"
        android:layout_marginLeft="-208dp"
        android:layout_marginTop="12dp"
        android:layout_marginBottom="127dp"
        android:layout_toRightOf="@+id/deleteBtn"
        android:visibility="invisible"
        app:srcCompat="@android:drawable/button_onoff_indicator_off" />



</RelativeLayout>