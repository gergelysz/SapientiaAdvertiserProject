<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="12dp"
    android:background="@color/darkgreen"
    android:padding="12dp">

    <ImageView
        android:id="@+id/detail_image"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerHorizontal="true"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/detail_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_image"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="@string/textviewtitle"
        android:textColor="@color/white"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/detail_shortDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:layout_below="@id/detail_title"
        android:layout_marginTop="12dp"
        android:text="@string/textviewshortdesc"
        android:textColor="@color/white"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/detail_LongDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_shortDesc"
        android:layout_marginTop="20dp"
        android:text="@string/textviewlongdesc"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/detail_phoneNum"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_LongDesc"
        android:layout_marginTop="32dp"
        android:text="@string/textviewphonenum"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/detail_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/detail_phoneNum"
        android:text="@string/textviewlocation"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/visitors_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/visitors_number"
        android:text="@string/visitors_number"
        android:textColor="@color/white"
        android:textSize="16sp" />

    <Button
        android:id="@+id/deleteBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/detail_location"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="70dp"
        android:layout_marginEnd="34dp"
        android:layout_marginRight="34dp"
        android:text="Törlés"
        android:visibility="invisible"/>

    <Button
        android:id="@+id/hideBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="59dp"
        android:layout_marginRight="59dp"
        android:layout_marginBottom="48dp"
        android:layout_toStartOf="@+id/deleteBtn"
        android:layout_toLeftOf="@+id/deleteBtn"
        android:text="Elrejtés"
        android:layout_alignParentLeft="true"
        android:visibility="invisible"/>


</RelativeLayout>